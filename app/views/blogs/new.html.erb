<h1>New Post</h1>

<% if @blog.errors.any? %>
  <%= @blog.errors.count %>件のエラーが発生しました。
  <% @blog.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>  


<!-- form_with部分 -->
<%= form_with model:@blog, local: true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Category</h4>
  <%= f.text_field :category %>
  
  <h4>Text</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Post' %>
  
<% end %>

